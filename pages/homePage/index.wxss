.design_project .The_design_style {
  width: 100vw;
  display: flex;
  justify-content: center;
  align-items: center;
}
.design_project .The_design_style .name {
  margin: 10px 0;
  padding: 0 30rpx;
  width: 680rpx;
  height: 80rpx;
  background-color: #000;
  color: #fff;
  border-radius: 10rpx;
  font-size: 30rpx;
  font-weight: 600;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.design_project .project {
  width: 100vw;
  display: flex;
  justify-content: center;
  align-items: center;
}
.design_project .project .list {
  margin: 0 0 60rpx 0;
}
.design_project .project .list .img image {
  width: 680rpx;
  height: 374rpx;
  border-radius: 20rpx;
}
.design_project .project .list .con .name {
  font-size: 30rpx;
  font-weight: 900;
  margin: 10rpx 0;
}
.design_project .project .list .con .username {
  display: flex;
  font-size: 28rpx;
  color: #c6c6c6;
}
.design_project .project .list .con .username view:nth-child(1) {
  margin-right: 10rpx;
}
.design_style .main {
  margin: 20rpx 35rpx;
}
.design_style .main .style_list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
}
.design_style .main .style_list .list {
  width: 328rpx;
  height: 684rpx;
  margin: 0 0 60rpx 0;
}
.design_style .main .style_list .list .img {
  text-align: center;
}
.design_style .main .style_list .list .img image {
  width: 320rpx;
  height: 600rpx;
  border-radius: 20rpx;
}
.design_style .main .style_list .list .con {
  font-style: PingFang SC;
  padding: 0 20rpx;
}
.design_style .main .style_list .list .con .name {
  font-size: 30rpx;
  font-weight: 900;
  margin: 10rpx 0;
}
.design_style .main .style_list .list .con .username {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #c6c6c6;
}
.icon {
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
}
